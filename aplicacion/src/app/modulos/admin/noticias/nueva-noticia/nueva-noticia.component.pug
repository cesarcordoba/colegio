form(class="conteneador" [formGroup]="form" (ngSubmit)="submit()" novalidate)
    mat-dialog-content.contenido
        mat-form-field(class="input-layout")
            input(matInput formControlName="nombre" placeholder="Nombre de la noticia" required)
        mat-error(*ngIf="form.controls.nombre.invalid") Ingrese el nombre
    mat-dialog-actions.botones
        button(mat-button type="button" (click)="cancel()") Cancelar
            mat-icon cancel
        button(mat-button type="submit") Ok
            mat-icon done
