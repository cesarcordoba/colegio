        display flex
        justify-content center
        align-items center
        width 100%
        span
            font-size 15px
            color white
            font-weight 100
.cerrar-sesion
    position absolute
    top 4px
    right 17px
    cursor pointer
    &:focus
        outline 0px
    mat-icon
        color white
.mat-form-field-invalid .mat-form-field-ripple
    background-color white !important

