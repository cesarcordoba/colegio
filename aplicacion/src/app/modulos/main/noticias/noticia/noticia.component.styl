.iconos
    margin-top 15px
    display flex
    flex-direction row
.noticia-main-container
    position relative
    display flex
    justify-content center
    align-items flex-start
    .noticia-main-content
        position relative
        width 1300px
        display flex
        flex-direction row
        .contenedor-central
            border 2px solid #d6d6d6
            width 1000px
            margin-right 10px
            .etiqueta
                margin-top 20px
                width 90px
                height 28px
                display flex
                justify-content center
                align-items center
                p
                    color white
                    font-weight 600
                    font-size 16px
            .cuerpo-container
                display flex
                flex-direction column
                justify-content center
                align-items center
                .cuerpo-content
                    width 760px
                    .encabezado
                        text-align justify
                        h1
                            font-size 36px
                            margin 0
                        h3
                            margin 0
                            font-size 17px
                            font-weight 100
                            margin-top 10px
                    .imagen
                        margin-top 20px
                        height 410px
                        img
                            width 100%
                            height 100%
                    .descripcion
                        text-align justify
                    .contenedor-tags
                        margin-top 40px
                        display flex
                        flex-direction row
                        align-items center
                        p
                            font-size 13px
                            margin 0
                        a
                            border 1px solid
                            margin-left 12px
                            span
                                font-size 12px
                                text-transform uppercase
                    .boletin-semanal-container
                        margin-top 30px
                        margin-bottom 40px
                        background-color #5d5d5d
                        height 160px
                        display flex
                        justify-content center
                        align-items center
                        .boletin-semanal-content
                            width 500px
                            height 130px
                            h2
                                margin 0
                                font-size 28px
                                color white
                                margin-top 12px
                            p
                                margin 0
                                font-size 14px
                                color white
                                margin-top 12px
                            .btn-suscribir
                                background-color #3d3d3d
                                span
                                    font-size 10px
                                    color white
        .contenedor-lateral
            width 300px
            background-color #333333
            display flex
            flex-direction column
            align-items center
            mat-tab-group
                width 285px
                .mat-tab-label-content
                    color white
                .mat-tab-header-pagination-chevron
                    border-color white