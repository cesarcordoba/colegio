.mat-dialog-container
    background-color fondo !important
    overflow-y hidden
    position relative !important
    .sesion-dialog-contenedor
        display flex
        flex-direction column
        justify-content center
        align-items center
        .titulo
            h3
                color white
                margin 0
                font-size 20px
                font-weight bold
        .usuario
            display flex
            flex-direction row
            justify-content flex-end
            align-items center
            width 100%
            h3
                color white
                margin 0
                font-size 12px
                opacity 0.6
                margin-right 20px
            .mat-form-field-infix
                width 250px
                span
                    label
                        color white !important
                        font-size 10px
                        font-weight 100   
                .mat-input-element
                    color white !important
                    font-size 12px
                    font-weight 100
        .password
            display flex
