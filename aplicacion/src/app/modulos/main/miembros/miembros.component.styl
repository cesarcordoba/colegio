@import "/../../../../default.styl";

.linea-filtros
    background-color #505050
    width 100%
    height 1.5px
.miembros-container
    position relative
    margin-top 2vh
    min-height 100vh
    display flex
    justify-content center
    align-items flex-start
    .miembros-content
        position relative
        width 1300px
        display flex
        flex-direction row
        .filtros
            background-color #333333
            width 342px
            padding 8px
            .alfabetico
                .boton-todo
                    margin-right 8px
                .mat-button
                    min-width inherit !important
                    line-height inherit !important
                    padding 0 4px !important
            .lista
                .mat-radio-group
                    display flex
                    flex-direction column
        .regresar
            position absolute
            left 96%
        .grid-miembros
            display flex
            justify-content center
            align-items center
            width 100%
            height 100%
            .contenedor-grid
                width 95%
                height 95%
                display grid
                grid-template-columns repeat(5,1fr)
                grid-column-gap 20px
                grid-row-gap 15px
                @media mediana 
                    grid-template-columns repeat(3,1fr)
                .miembros-repeat
                    display flex
                    justify-content center
                    align-items center
                    .miembros
                        width 100%
                        height 100%
                        .imagen
                            width 100%
                            height 271px
                            background-color gray
                            display flex
                            justify-content center
                            align-items center
                        .linea-background
                            width 100%
                            background-color black
                            height 2px
                        .texto
                            height 128px
                            width 100%
                            background-color darkgrey
                            p
                                margin 0
