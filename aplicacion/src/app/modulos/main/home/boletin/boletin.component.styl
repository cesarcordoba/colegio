fondo = #2f2f2f
fondoBTN = #3d3d3d
.mat-dialog-container
    background-color fondo !important
    overflow-y hidden
    position relative !important
.contenido-mdDialog-boletin
    display flex
    flex-direction row
    justify-content space-around
    align-items center
    .boletin
        h3
            color white
            margin 0
            font-size 20px
            font-weight bold
        p
            margin-top 20px
            color white
            margin 0
            font-size 11px
            font-weight 100
        .boletin-formulario
            display flex
            flex-direction row
            justify-content center
            align-items center
        .mat-form-field-infix
            width 300px
            span
                label
                    color white !important
                    font-size 10px
                    font-weight 100   
            .mat-input-element
                color white !important
                font-size 12px
                font-weight 100
    .btn-dialog
        background-color fondoBTN
        margin-left 12px
        span
            color white
            font-size 12px
            font-weight bold
.cerrar-boletin
    position absolute
    top 4px
    right 17px
    cursor pointer
    &:focus
        outline 0px
    mat-icon
        color white
.mat-form-field-invalid .mat-form-field-ripple
    background-color white !important
